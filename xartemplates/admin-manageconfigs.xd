                                </xar:if>
                            </xar:foreach>
                        </fieldset>
                        <xar:elseif condition="count($configs) gt 0" />
                        <fieldset>
                            <legend>
                                 <a href="javascript:void(0);" title="#xarML('Click to toggle visibility for category options')#" onclick="return toggleDisplay('fieldwrapper_#$category#');">
